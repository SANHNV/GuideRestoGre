@model GuideRestoGre.Data.Models.Restaurant

<div>
    <div class="card border-success mb-3">
        <div class="card-header card-title bg-success text-white">@Model.Name</div>
        <div class="card-body">
            <p class="card-text">@Model.Description</p>
            <a href="#" class="card-link">@@Model.PhoneNumber</a>
            <a href="#" class="card-link">@Model.Mail</a>
            <hr />
            <p class="card-subtitle">Adresse</p>
            <p class="card-text">@Model.Address.Street</p>
            <p class="card-text">@Model.Address.City</p>
            <p class="card-text">@Model.Address.ZipCode</p>
            @if (Model.Grade.Comment != null)
            {
                <p class="card-text">Note : @Model.Grade.Score</p>
            }
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-controller="Restaurants" asp-route-id="@Model.ID">Edit Restau</a>
            <a asp-action="Delete" asp-controller="Restaurants" asp-route-id="@Model.ID">Delete</a>
            <a asp-action="Edit" asp-controller="Scores" asp-route-id="@Model.ID">New Score</a>
        </div>
    </div>
</div>
