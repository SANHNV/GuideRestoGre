@model GuideRestoGre.Data.Models.Restaurant

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Restaurant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Nom</label>
                <input asp-for="Name" required placeholder="Ô Wasabi" type="text" autofocus class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" required pattern="[0-9]{2}-[0-9]{2}-[0-9]{2}-[0-9]{2}" placehoder="0606060606" type="tel" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" required placeholder="Super Resto" type="text" autocomplete="on" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" type="email" required placeholder="mail@mail.mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="AddressStreet">Street</label>
                <input name="AddressStreet" type="text" required placeholder="38 Rue de Grenoble" class="form-control" />
            </div>
            <div class="form-group">
                <label for="AddressCity">City</label>
                <input name="AddressCity" type="text" required placeholder="Grenoble" class="form-control" />
            </div>
            <div class="form-group">
                <label for="AddressZipCode">ZipCode</label>
                <input name="AddressZipCode" type="text" required placeholder="38000" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
