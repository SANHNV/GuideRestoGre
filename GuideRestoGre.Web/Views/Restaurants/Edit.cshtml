@model GuideRestoGre.Data.Models.Restaurant

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Restaurant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-row">
                <div class="form-group">
                    <label>Nom</label>
                    <input asp-for="Name" required placeholder="Ô Wasabi" type="text" autofocus class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" required pattern="[0-9]{2}-[0-9]{2}-[0-9]{2}-[0-9]{2}" placehoder="0606060606" type="tel" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Mail" class="control-label"></label>
                    <input asp-for="Mail" type="email" required placeholder="mail@mail.mail" class="form-control" />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" required placeholder="Super Resto" type="text" autocomplete="on" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" asp-for="Address.ID" />
            <input type="hidden" asp-for="Address.RestaurantId" />
            <input type="hidden" asp-for="Grade.ID" />
            <input type="hidden" asp-for="Grade.Score" />
            <input type="hidden" asp-for="Grade.Comment" />
            <input type="hidden" asp-for="Grade.LastVisit" />
            <input type="hidden" asp-for="Grade.RestaurantId" />
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Address.Street" class="control-label"></label>
                    <input asp-for="Address.Street" type="text" required placeholder="17 Rue Thiers" class="form-control" />
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-9">
                    <label asp-for="Address.City" class="control-label"></label>
                    <input asp-for="Address.City" type="text" required placeholder="Grenoble" class="form-control" />
                    <span asp-validation-for="Address.City" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Address.ZipCode" class="control-label"></label>
                    <input asp-for="Address.ZipCode" type="text" required placeholder="38000 CEDEX2" class="form-control" />
                    <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
</form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
