@model GuideRestoGre.Web.ViewsModels.SerialisationViewModel
@{
    ViewData["Title"] = "Serialisation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Serialisation</h1>

@if (Model.Error != null)
{
    <div class="alert alert-warning alert-dismissible fade show">
        <strong>Warning!</strong> @Model.Error
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
}

<div>
    <form asp-action="Serialisation">
        <div class="form-group">
            <label asp-for="IsImport" class="control-label"></label>
            <select asp-for="IsImport" autofocus class="form-control">
                <option value="true">Import</option>
                <option value="false">Export</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Path" class="control-label"></label>
            <input type="text" asp-for="Path" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Serialisation" class="btn btn-info" />
        </div>
    </form>
</div>
